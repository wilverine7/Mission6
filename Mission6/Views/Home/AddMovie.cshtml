
@{
    ViewData["Title"] = "Add Movie";
}

@model Mission6.Models.ApplicationResponse


<h1>Add Movie</h1>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="MovieTitle">Title</label>
            <input asp-for="MovieTitle" type="text" class="form-control" id="Title" placeholder="Title" required>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" type="text" class="form-control" id="Category" placeholder="Category" required>
        </div>


    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" type="number" class="form-control" min="1895" max="2023" step="1" id="Year" placeholder="Year" required>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="DirectorFirstName">Director First Name</label>
            <input asp-for="DirectorFirstName" type="text" class="form-control" id="DirectorFirstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="DirectorLastName">Director Last Name</label>
            <input asp-for="DirectorLastName" type="text" class="form-control" id="DirectorLastName" placeholder="Last Name" required>
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating" id="Rating" class="form-control" required>
                <option disabled>Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>

            </select>
        </div>

    </div>
    <label>Edited?</label>
    <div class="form-check">
        <input asp-for="Edited" class="form-check-input" type="radio" name="Edited" value="Yes">
        <label asp-for="Edited" class="form-check-label" for="EditedYes">
            Yes
        </label>
    </div>
    <div class="form-check">
        <input asp-for="Edited" class="form-check-input" type="radio" name="Edited" value="No" checked>
        <label class="form-check-label" asp-for="Edited">
            No
        </label>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" type="text" class="form-control" id="LentTo" placeholder="">
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" type="text" class="form-control" id="Notes" placeholder=""></textarea>
    </div>
    <div asp-validation-summary="All">

    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>

</form>


